# ===========================================
# Docker PostgreSQL Configuration
# ===========================================
POSTGRES_USER="smartclip"
POSTGRES_PASSWORD="smartclip_password"
POSTGRES_DB="smartclip_db"

# ===========================================
# Database Connection (for Docker)
# ===========================================
# When running with Docker, use the service name 'postgres'
DATABASE_URL="postgresql://smartclip:smartclip_password@postgres:5432/smartclip_db?schema=public"
# For local development without Docker, use:
# DATABASE_URL="postgresql://smartclip:smartclip_password@localhost:5432/smartclip_db?schema=public"

# ===========================================
# Redis Configuration (for Docker)
# ===========================================
# When running with Docker, use the service name 'redis'
REDIS_HOST="redis"
REDIS_PORT="6379"
REDIS_URL="redis://redis:6379"
# For local development without Docker, use:
# REDIS_HOST="localhost"
# REDIS_URL="redis://localhost:6379"

# ===========================================
# API Configuration
# ===========================================
PORT="3001"
API_URL="http://localhost:3001"
NODE_ENV="production"

# ===========================================
# NextAuth.js
# ===========================================
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"
JWT_SECRET="your-jwt-secret-key-generate-with-openssl"

# ===========================================
# Google OAuth
# ===========================================
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ===========================================
# Google AI (Gemini)
# ===========================================
GOOGLE_API_KEY="your-google-gemini-api-key"

# ===========================================
# Google Cloud (Speech-to-Text, Video Intelligence)
# ===========================================
GOOGLE_CLOUD_PROJECT_ID="your-google-cloud-project-id"
GOOGLE_CLOUD_KEY_FILE="path/to/service-account-key.json"

# ===========================================
# Fish Audio TTS
# ===========================================
FISH_AUDIO_API_KEY="your-fish-audio-api-key"
FISH_AUDIO_REFERENCE_ID="your-default-voice-reference-id"

# ===========================================
# AWS S3
# ===========================================
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="your-aws-region"
AWS_S3_BUCKET="your-s3-bucket-name"

# ===========================================
# Stripe Payment
# ===========================================
STRIPE_SECRET_KEY="your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="your-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="your-stripe-webhook-secret"

# ===========================================
# Frontend Configuration
# ===========================================
NEXT_PUBLIC_API_URL="http://localhost:3001"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ===========================================
# FFmpeg & Video Processing
# ===========================================
FFMPEG_PATH="/usr/bin/ffmpeg"
FFPROBE_PATH="/usr/bin/ffprobe"
YT_DLP_PATH="/usr/local/bin/yt-dlp"

# ===========================================
# Temporary Files & Uploads
# ===========================================
TEMP_DIR="./temp"
UPLOAD_DIR="./uploads"

